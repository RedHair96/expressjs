extends layouts/default.pug
block albums_nav
  li(class="nav-item active")
    a(class="nav-link" href="/albums") Albums
block content
  h1 Albums
  div(class="container-fluid")
    div(class="row")
      each val in albums
        div(class="col-xl-3 col-md-4 col-sm-6")
          div(class="album-cover")
            a(href= '/' + val.page) 
              img(src= '/' + val.avatar alt="")